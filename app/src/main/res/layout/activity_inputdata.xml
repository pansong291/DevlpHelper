<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:hint="123.4KB"
				android:id="@+id/inSize"
				android:singleLine="true"/>

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:hint="http://"
				android:id="@+id/inUrl"
				android:layout_weight="1.0"/>

		</LinearLayout>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:maxLines="4"
			android:hint="更新内容"
			android:id="@+id/inMessage"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:hint="强制更新"
				android:id="@+id/inQZup"
				android:inputType="number"
				android:singleLine="true"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="公告显示时间"
				android:onClick="setTime"
				style="?android:attr/buttonStyleSmall"
				android:textAppearance="?android:attr/textAppearanceSmall"/>

		</LinearLayout>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:hint="公告内容"
			android:maxLines="4"
			android:id="@+id/inGGMess"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:text="更新"
				android:onClick="gengXin"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

			<Button
				android:layout_height="wrap_content"
				android:text="公告"
				android:onClick="gongGao"
				android:layout_width="wrap_content"
				android:layout_weight="1.0"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:id="@+id/inLinear"
			android:visibility="gone">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<Button
					android:layout_height="wrap_content"
					android:text="复制"
					android:onClick="copy"
					android:layout_width="wrap_content"
					android:layout_weight="1.0"/>

				<Button
					android:layout_height="wrap_content"
					android:text="Go"
					android:layout_width="wrap_content"
					android:onClick="goWeb"/>

				<Button
					android:layout_height="wrap_content"
					android:text="清空"
					android:onClick="qingk"
					android:layout_width="wrap_content"/>

			</LinearLayout>

			<EditText
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:layout_width="match_parent"
				android:id="@+id/outMes"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

